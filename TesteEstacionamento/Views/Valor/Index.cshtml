@model IEnumerable<TesteEstacionamento.Models.ValorModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Relação de Valores</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Nova Valor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InicioVigenciaDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TerminoVigenciaDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorInicial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorAdicional)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InicioVigenciaDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TerminoVigenciaDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorAdicional)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a  class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
